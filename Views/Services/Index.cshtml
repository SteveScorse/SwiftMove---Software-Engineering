@model IEnumerable<SwiftMove.Models.ServicesModel> //Expect to be sent a list of property models
@{
    ViewData["Title"] = "Services";
}
<!-- Header Div-->
<div class="container">
<div class="container1 justify-content-center" style="max-width: 2000px">
    <div class="container text-start pt-5 pb-4">
        <h1 class="container text-white h1a ">Services</h1>
    </div>
</div>
<!-- Header Div-->
<div class="container mb-4">
    <h5 >Below is the list of all our services we currently have to offer</h5>
</div>

<!-- Service Cards Generated based of Services Data -->
<div class="container ">
    <div class="row g-4">
    @foreach (var services in Model)
    {
        <div class="col-md-6 col-lg-4 d-flex">
            <div class="card w-100 h-100 shadow-sm">
                <img src="@Url.Content("~/Images/" + services.Image)" alt="@services.Title"
                     class="card-img-top" style="object-fit: cover; height: 250px;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">@services.Title</h5>
                    <p class="card-text flex-grow-1">@services.Description</p>
                    <h4 class="text-primary mt-2">£@services.Price</h4>
                        <a class="btn btn-outline-success mt-3" asp-controller="Bookings" asp-action="Index">Book Now</a>
                </div>
            </div>
        </div>
    }
</div>
</div>
</div>
